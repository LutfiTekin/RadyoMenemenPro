<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="8dp"
    android:id="@+id/obC"
    app:cardBackgroundColor="@color/cardviewBG">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Pitem"
        android:padding="8dp"
        android:focusable="true"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Olan Biten Başlık"
            android:id="@+id/ob_title"
            android:textColor="@color/textColorPrimary"
            android:typeface="normal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:textIsSelectable="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/app_name"
            android:id="@+id/ob_content"
            android:layout_below="@+id/ob_title"
            android:layout_alignLeft="@+id/ob_title"
            android:layout_alignStart="@+id/ob_title"
            android:textSize="12sp"
            android:textIsSelectable="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/textColorPrimaryDisabled"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="12/5 12:00"
            android:id="@+id/ob_zaman"
            android:layout_below="@+id/ob_content"
            android:layout_alignStart="@+id/ob_content"
            android:textColor="@color/textColorPrimary"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Gönderen"
            android:id="@+id/ob_yazan"
            android:layout_below="@+id/ob_content"
            android:layout_alignEnd="@+id/ob_content"
            android:textStyle="italic"
            android:textColor="@color/textColorPrimaryDisabled"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>