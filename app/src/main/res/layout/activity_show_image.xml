<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.incitorrent.radyo.menemen.pro.show_image"
    android:background="@color/colorBackgroundsofter">

    <com.incitorrent.radyo.menemen.pro.utils.TouchImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_image"
        android:src="@drawable/default_image"
        android:background="#00ffffff"
        android:layout_gravity="center" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_fab"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_chat" />
</FrameLayout>
