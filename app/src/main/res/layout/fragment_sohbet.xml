<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.sohbet"
    android:background="@color/colorBackgroundF">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ETmesaj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="@string/hint_write_something"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences|textAutoCorrect"
            android:maxLines="4"
            android:scrollHorizontally="false"
            android:minLines="2"
            android:textColorHint="#eeeeee"
            android:textColor="#f5f5f5"
            android:layout_marginLeft="16dp" />
        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/smile_goster_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/smiley"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:background="?android:attr/selectableItemBackground"/>

        <ImageButton
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mesaj_gonder_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/cd_send_button"
            android:src="@mipmap/ic_menu_send"
            android:scaleType="center"
            android:layout_marginRight="16dp"
            android:background="?android:attr/selectableItemBackground"
             />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/RVsmileys"
        android:visibility="gone" />
      <android.support.v4.widget.SwipeRefreshLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/swipeRV">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sohbetRV"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        />
</android.support.v4.widget.SwipeRefreshLayout>
  </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resim_ekle"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"
        app:backgroundTint="#3d5afe"
        android:src="@drawable/ic_upload_orange" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/scrolltoTop"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
        android:visibility="invisible"
        android:scaleType="center" />
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/image_picker_card"
    android:layout_gravity="center_horizontal|bottom"
    android:layout_marginLeft="@dimen/image_picker_margin"
    android:layout_marginRight="@dimen/image_picker_margin"
    android:layout_marginBottom="16dp"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/colorBackgroundsoft"
    android:visibility="gone"
    >
    <LinearLayout
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/take_photo"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/ic_camera_alt_black_24dp"
                android:contentDescription="@string/search_lyrics"
                android:layout_gravity="center_horizontal"
                android:foreground="?android:attr/selectableItemBackground"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_take_photo"
                android:textSize="12sp"
                android:textColor="@color/textColorPrimary"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/pick_from_gallery"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/default_image"
                android:foreground="?android:attr/selectableItemBackground"
                android:contentDescription="@string/dialog_choose_from_gallery"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_choose_from_gallery"
                android:textSize="12sp"
                android:textColor="@color/textColorPrimary"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/cancel_image_pick"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/ic_cancel_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:contentDescription="@android:string/cancel"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@android:string/cancel"
                android:textSize="12sp"
                android:textColor="@color/textColorPrimary"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</FrameLayout>
