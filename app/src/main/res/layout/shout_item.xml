<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shoutcard"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    app:cardBackgroundColor="@color/cardviewBG"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardviewBG"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Adı"
        android:id="@+id/username"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="@color/textColorPrimary"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla lorem est, mollis quis velit eu, rhoncus pulvinar leo. Proin vestibulum porttitor nisi, id tincidunt felis fermentum ac."
        android:id="@+id/shout"
        android:textIsSelectable="true"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColorPrimaryDisabled"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12:00"
        android:id="@+id/zaman"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textStyle="italic"
        android:textColor="@color/textColorPrimaryDisabled"
        android:layout_margin="8dp" />
</RelativeLayout>
</android.support.v7.widget.CardView>