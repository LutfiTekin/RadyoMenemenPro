<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">



    <SwitchPreference
        android:defaultValue="true"
        android:key="download_artwork"
        android:summary="@string/settings_artwork_summary"
        android:title="@string/settings_artwork_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="music_only"
        android:title="@string/settings_music_only_title"
        android:summary="@string/settings_music_only_summary"
        android:disableDependentsState="true"
        />

    <SwitchPreference
        android:defaultValue="true"
        android:key="onstart_chat"
        android:dependency="music_only"
        android:summary="@string/settings_onstart_chat_summary"
        android:title="@string/settings_onstart_chat_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="show_full_error"
        android:summary="@string/settings_show_full_error_summary"
        android:title="@string/settings_show_full_error_title" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/anims"
        android:entryValues="@array/anim_values"
        android:key="enter_anim"
        android:negativeButtonText="@android:string/cancel"
        android:positiveButtonText="@null"
        android:title="@string/settings_list_populate_anim" />

