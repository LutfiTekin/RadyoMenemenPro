<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/radiocard"
    app:cardBackgroundColor="@color/cardviewBG"
>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/album_placeholder"
        android:contentDescription="@string/cd_artwork"
        android:id="@+id/art"
        android:adjustViewBounds="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:maxLines="2"
        android:background="@color/transparentBackground"
        android:text="@string/music_not_found"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimary"
        android:id="@+id/song"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignBottom="@+id/art"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/art"
        android:layout_alignEnd="@+id/art" />

</RelativeLayout>
</android.support.v7.widget.CardView>