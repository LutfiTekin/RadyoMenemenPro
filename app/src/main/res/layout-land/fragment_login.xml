<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.incitorrent.radyo.menemen.pro.fragments.login">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorBackgroundF">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/descr_login_logout"
          android:id="@+id/textView"
          android:gravity="center_horizontal"
          android:textColor="@color/textColor"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true" />

      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:hint="@string/hint_username"
          android:ems="10"
          android:id="@+id/usernameET"
          android:layout_below="@+id/textView"
          android:layout_centerHorizontal="true"
          android:textColor="@color/textColor"
          android:textColorHint="@color/textColorHint"
          android:layout_margin="16dp" />

      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPassword"
          android:ems="10"
          android:hint="@string/hint_password"
          android:id="@+id/passET"
          android:layout_below="@+id/usernameET"
          android:layout_alignStart="@+id/usernameET"
          android:textColorHint="@color/textColorHint"
          android:layout_marginBottom="16dp" />

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/button_login_signup"
          android:id="@+id/submit"
          android:layout_marginLeft="124dp"
          android:layout_marginStart="124dp"
          android:layout_alignTop="@+id/no_login"
          android:layout_alignLeft="@+id/textView2"
          android:layout_alignStart="@+id/textView2" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/login_screen_descr"
          android:id="@+id/textView2"
          android:gravity="center_horizontal"
          android:textColor="@color/textColor"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/no_login"
          android:layout_margin="16dp" />

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/button_no_login"
          android:id="@+id/no_login"
          android:layout_below="@+id/passET"
          android:layout_toRightOf="@+id/submit"
          android:layout_toEndOf="@+id/submit" />

  </RelativeLayout>
</FrameLayout>
