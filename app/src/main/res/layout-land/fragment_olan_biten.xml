<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.incitorrent.radyo.menemen.pro.fragments.olan_biten">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/colorBackgroundsofter">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/obR"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_toStartOf="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView"
            android:src="@drawable/announce"
            android:layout_above="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_ob"
            android:textSize="16sp"
            android:text="@string/news_descr"
            android:textColor="@color/softGrey"
            android:layout_below="@+id/textView3"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignStart="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/news"
            android:id="@+id/textView3"
            android:textColor="@color/softGrey"
            android:textStyle="bold"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/imageView" />
    </RelativeLayout>

</FrameLayout>
